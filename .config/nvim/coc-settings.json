{
  "languageserver": {
    "rust": {
      "command": "ra_lsp_server",
      "args": ["--lsp"],
      "filetypes": ["rs", "rust"],
      "rootPatterns": ["Cargo.toml"],
      "initializationOptions": {
        "enableCargoWatchOnStartup": "enabled"
      }
    },

    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".clang_format"]
    },

    "haskell": {
      "command": "hie-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lsh",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlint": true
        }
      }
    }
  }
}

